= link_to show_post_post_path(today.id) do 
  .posts-box 
    .posts-box__top
      .posts-box__top__image
        = image_tag today.artist.image.url

      .posts-box__top__right
        %h2.posts-box__top__right__sub
          アーティスト名
        %h2.posts-box__top__right__text
          = today.artist.name
        %h2.posts-box__top__right__sub
          LIVE開始時刻
        %h2.posts-box__top__right__text
          = today.date_time.strftime("%-m月%-d日 %-H時%-M分")
        %h2.posts-box__top__right__sub
          LIVE予定時間
        %h2.posts-box__top__right__text
          = today.how_long.name
        - if today.now_on == false
          .posts-box-2__top__right__now-on
            開催中
        - elsif today.status == false
          .posts-box-2__top__right__done-live
            終了済
        - else 
          .posts-box-2__top__right__yet
            開催前


    .posts-box__bottom
      .posts-box__bottom__box
        .posts-box__bottom__box__left
          最寄駅
        .posts-box__bottom__box__right
          = today.station
      .posts-box__bottom__box
        .posts-box__bottom__box__left
          会場名
        .posts-box__bottom__box__right
          = today.venue

